@model dynamic
@using System

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Password Reset Successful - Graduation App</title>
</head>

<body
    style="margin:0; padding:28px 0; background:#f5f7fb; font-family:-apple-system,BlinkMacSystemFont,'Segoe UI',Roboto,sans-serif;">

    <div
        style="max-width:600px; margin:0 auto; background:#fff; border-radius:12px; overflow:hidden; box-shadow:0 2px 10px rgba(16,24,40,0.06);">

        <!-- Header -->
        <div style="padding:28px 24px; background:#16a34a; color:#fff; text-align:center;">
            <div style="font-size:14px; text-transform:uppercase; letter-spacing:0.08em; opacity:0.9;">Graduation App
            </div>
            <div style="font-size:22px; font-weight:700; margin-top:6px;">Password Reset Successful</div>
        </div>

        <!-- Content -->
        <div style="padding:24px 28px;">
            <h2 style="margin:0 0 8px; font-size:18px; font-weight:700; color:#101828;">Hi @Model.Username,</h2>
            <p style="margin:0 0 20px; font-size:16px; line-height:1.6; color:#344054;">
                Your password has been successfully reset. You can now log in to your account using your new password.
            </p>

            <!-- Success Icon -->
            <div style="text-align:center; margin:20px 0;">
                <div
                    style="display:inline-block; width:60px; height:60px; background:#16a34a; border-radius:50%; position:relative;">
                    <div
                        style="position:absolute; top:50%; left:50%; transform:translate(-50%, -50%); color:#fff; font-size:24px;">
                        ✓</div>
                </div>
            </div>

            <!-- Security Notice -->
            <div
                style="background:#f0f9ff; border:1px solid #7dd3fc; color:#0369a1; padding:12px 14px; border-radius:10px; font-size:14px; margin:20px 0;">
                <strong>Security tip:</strong> If you didn't make this change, please contact our support team
                immediately.
            </div>

            <!-- Login Button -->
            <div style="text-align:center; margin:20px 0;">
                <a href="#"
                    style="display:inline-block; padding:14px 24px; background:#4f46e5; color:#fff; text-decoration:none; border-radius:8px; font-weight:700; font-size:16px;">
                    Log in to your account
                </a>
            </div>
        </div>

        <!-- Footer -->
        <div style="border-top:1px solid #EAECF0; padding:16px 20px; text-align:center; color:#98A2B3; font-size:12px;">
            <div>&copy; @DateTime.UtcNow.Year Graduation App. All rights reserved.</div>
            <div>This is an automated message — please do not reply.</div>
        </div>
    </div>

</body>

</html>
