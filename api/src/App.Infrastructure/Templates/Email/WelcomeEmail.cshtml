@model dynamic
@using System

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Welcome to Graduation App</title>
</head>
<body style="margin:0; padding:28px 0; background:#f5f7fb; font-family:-apple-system,BlinkMacSystemFont,'Segoe UI',Roboto,sans-serif;">
    
    <div style="max-width:600px; margin:0 auto; background:#fff; border-radius:12px; overflow:hidden; box-shadow:0 2px 10px rgba(16,24,40,0.06);">
        
        <!-- Header -->
        <div style="padding:28px 24px; background:#4f46e5; color:#fff; text-align:center;">
            <div style="font-size:14px; text-transform:uppercase; letter-spacing:0.08em; opacity:0.9;">Graduation App</div>
            <div style="font-size:22px; font-weight:700; margin-top:6px;">Welcome, @Model.Username</div>
        </div>
        
        <!-- Content -->
        <div style="padding:24px 28px;">
            <h2 style="margin:0 0 8px; font-size:18px; font-weight:700; color:#101828;">Let's confirm your email</h2>
            <p style="margin:0 0 20px; font-size:16px; line-height:1.6; color:#344054;">
                Thanks for signing up! Click the button below to verify your email and finish setting up your account.
            </p>
            
            <!-- Button -->
            <div style="text-align:center; margin:20px 0;">
                <a href="@Model.VerificationUrl" style="display:inline-block; padding:14px 24px; background:#16a34a; color:#fff; text-decoration:none; border-radius:8px; font-weight:700; font-size:16px;">
                    Verify my email
                </a>
            </div>
            
            <!-- Warning -->
            <div style="background:#fffaeb; border:1px solid #fedf89; color:#B54708; padding:12px 14px; border-radius:10px; font-size:14px; margin:20px 0;">
                <strong>Heads up:</strong> This link expires on <strong>@Model.ExpiresAt.ToString("MMM dd, yyyy 'at' HH:mm") UTC</strong>.
            </div>
            
            <!-- Fallback -->
            <p style="font-size:13px; color:#667085; line-height:1.6; margin:20px 0 0;">
                If the button doesn't work, paste this link into your browser:<br>
                <a href="@Model.VerificationUrl" style="color:#4f46e5; word-break:break-all;">@Model.VerificationUrl</a>
            </p>
        </div>
        
        <!-- Footer -->
        <div style="border-top:1px solid #EAECF0; padding:16px 20px; text-align:center; color:#98A2B3; font-size:12px;">
            <div>&copy; @DateTime.UtcNow.Year Graduation App. All rights reserved.</div>
            <div>This is an automated message â€” please do not reply.</div>
        </div>
        
    </div>
    
</body>
</html>