@model dynamic
@using System

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Reset Your Password - Graduation App</title>
</head>
<body style="margin:0; padding:28px 0; background:#f5f7fb; font-family:-apple-system,BlinkMacSystemFont,'Segoe UI',Roboto,sans-serif;">
    
    <div style="max-width:600px; margin:0 auto; background:#fff; border-radius:12px; overflow:hidden; box-shadow:0 2px 10px rgba(16,24,40,0.06);">
        
        <!-- Header -->
        <div style="padding:28px 24px; background:#dc2626; color:#fff; text-align:center;">
            <div style="font-size:14px; text-transform:uppercase; letter-spacing:0.08em; opacity:0.9;">Graduation App</div>
            <div style="font-size:22px; font-weight:700; margin-top:6px;">Password Reset Request</div>
        </div>
        
        <!-- Content -->
        <div style="padding:24px 28px;">
            <h2 style="margin:0 0 8px; font-size:18px; font-weight:700; color:#101828;">Hi @Model.Username,</h2>
            <p style="margin:0 0 20px; font-size:16px; line-height:1.6; color:#344054;">
                We received a request to reset your password. If you made this request, click the button below to set a new password.
            </p>
            
            <!-- Button -->
            <div style="text-align:center; margin:20px 0;">
                <a href="@Model.ResetUrl" style="display:inline-block; padding:14px 24px; background:#dc2626; color:#fff; text-decoration:none; border-radius:8px; font-weight:700; font-size:16px;">
                    Reset my password
                </a>
            </div>
            
            <!-- Warning -->
            <div style="background:#fef2f2; border:1px solid #fecaca; color:#991b1b; padding:12px 14px; border-radius:10px; font-size:14px; margin:20px 0;">
                <strong>Important:</strong> This link expires on <strong>@Model.ExpiresAt.ToString("MMM dd, yyyy 'at' HH:mm") UTC</strong> for security reasons.
            </div>
            
            <!-- Security Notice -->
            <div style="background:#f0f9ff; border:1px solid #7dd3fc; color:#0369a1; padding:12px 14px; border-radius:10px; font-size:14px; margin:20px 0;">
                <strong>Didn't request this?</strong> You can safely ignore this email. Your password won't be changed unless you click the reset link above.
            </div>
            
            <!-- Fallback -->
            <p style="font-size:13px; color:#667085; line-height:1.6; margin:20px 0 0;">
                If the button doesn't work, paste this link into your browser:<br>
                <a href="@Model.ResetUrl" style="color:#dc2626; word-break:break-all;">@Model.ResetUrl</a>
            </p>
        </div>
        
        <!-- Footer -->
        <div style="border-top:1px solid #EAECF0; padding:16px 20px; text-align:center; color:#98A2B3; font-size:12px;">
            <div>&copy; @DateTime.UtcNow.Year Graduation App. All rights reserved.</div>
            <div>This is an automated message â€” please do not reply.</div>
        </div>
    </div>
    
</body>
</html>
