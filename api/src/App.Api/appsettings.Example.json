{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Hangfire": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=graduation_db;Username=postgres;Password=your_password",
    "HangfireConnection": "Server=localhost;Database=YourApp_Hangfire;Trusted_Connection=true;TrustServerCertificate=true;"
  },
  "Cors": {
    "AllowedOrigins":["http://localhost:3000", "https://localhost:3000"]
  },
  "Jwt": {
    "SecretKey": "YourSuperSecretKeyThatShouldBeAtLeast32Characters",
    "Issuer": "App.Api",
    "Audience": "App.Client",
    "AccessTokenExpirationMinutes": 30
  },
  "Auth": {
    "EmailVerificationTokenExpirationMinutes": 30
  },
  "Email": {
    "Smtp": {
      "Host": "localhost",
      "Port": 1025,
      "Username": "",
      "Password": "",
      "EnableSsl": false
    },
    "From": {
      "Name": "Graduation App",
      "Address": "noreply@graduation.com"
    },
    "BaseUrl": "https://localhost:7000"
  }
}