{
  "name": "graduation",
  "private": true,
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5"
  },
  "workspaces": [
    "web",
    "api"
  ],
  "scripts": {
    "prepare": "husky"
  },
  "lint-staged": {
    "web/**/*.{js,jsx,ts,tsx}": [
      "bun --cwd web run lint:staged",
      "bun --cwd web run prettier:staged",
      "bun --cwd admin run lint:staged",
      "bun --cwd admin run prettier:staged"
    ],
    "web/**/*.{json,css,md}": [
      "bun --cwd web run prettier:staged",
      "bun --cwd admin run prettier:staged"
    ],
    "api/**/*.{cs,csproj}": [
      "dotnet format api --include"
    ]
  }
}
